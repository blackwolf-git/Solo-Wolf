<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_dark"
    tools:context=".activities.DigitalDisciplineActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/NeonText"
            android:text="@string/digital_discipline_title"
            android:textSize="24sp"
            android:textAlignment="center"
            android:layout_marginBottom="24dp"/>

        <!-- Porn Blocking -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_neon_border"
            android:padding="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/block_porn_sites"
                android:textColor="@color/text_primary"/>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchBlockPorn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/SwitchNeon"/>
        </LinearLayout>

        <!-- Social Media Limits -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_neon_border"
            android:padding="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/social_media_limits"
                android:textColor="@color/text_primary"/>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchSocialMediaLimit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/SwitchNeon"/>
        </LinearLayout>

        <!-- App Usage Stats -->
        <Button
            android:id="@+id/btnAppUsageSettings"
            style="@style/NeonButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/view_app_usage"
            android:layout_marginBottom="16dp"/>

        <!-- Set Daily Limits -->
        <Button
            android:id="@+id/btnSetLimits"
            style="@style/NeonButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/set_daily_limits"
            android:layout_marginBottom="16dp"/>

        <!-- Warning Message -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/digital_discipline_warning"
            android:textColor="@color/accent_pink"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</ScrollView>
