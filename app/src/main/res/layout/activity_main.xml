<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A0A1A"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- App Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="InstaAnalyzer 2050"
            android:textColor="#00B4FF"
            android:textSize="28sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:textAllCaps="true"
            android:shadowColor="#0066FF"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="10"/>

        <!-- Username Input -->
        <EditText
            android:id="@+id/username_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="أدخل اسم مستخدم إنستقرام"
            android:inputType="text"
            android:textColor="#FFFFFF"
            android:textColorHint="#6666FF"
            android:backgroundTint="#0066FF"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:drawableLeft="@drawable/ic_instagram"
            android:drawableTint="#00B4FF"/>

        <!-- Analyze Button -->
        <Button
            android:id="@+id/analyze_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="تحليل الحساب"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:background="@drawable/neon_button_background"
            android:layout_marginBottom="24dp"
            android:padding="16dp"/>

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progress_bar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateTint="#00B4FF"
            android:visibility="gone"
            android:layout_gravity="center"/>

        <!-- Results Layout -->
        <LinearLayout
            android:id="@+id/result_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:padding="16dp"
            android:background="@drawable/neon_border_background">

            <!-- Analysis Result -->
            <TextView
                android:id="@+id/analysis_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#00FFFF"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"
                android:lineSpacingMultiplier="1.2"/>

            <!-- Video Suggestion -->
            <TextView
                android:id="@+id/video_suggestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#00FFCC"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"
                android:lineSpacingMultiplier="1.2"/>

            <!-- Best Time to Post -->
            <TextView
                android:id="@+id/best_time_to_post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#0099FF"
                android:textSize="16sp"
                android:lineSpacingMultiplier="1.2"/>
        </LinearLayout>

        <!-- Future Tech Footer -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="تقنية المستقبل - 2050 Edition"
            android:textColor="#6666FF"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginTop="24dp"/>
    </LinearLayout>
</ScrollView>
