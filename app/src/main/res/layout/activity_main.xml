<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A0A0A"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <!-- Header with Neon Glow -->
        <TextView
            android:id="@+id/app_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Solo Wolf 2050"
            android:textSize="32sp"
            android:textColor="#00E5FF"
            android:textStyle="bold"
            android:shadowColor="#40C4FF"
            android:shadowDx="4"
            android:shadowDy="4"
            android:shadowRadius="20"
            android:background="#1C1C1C"
            android:padding="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="30dp" />

        <!-- User Data Input Section -->
        <androidx.cardview.widget.CardView
            android:id="@+id/user_input_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#1C1C1C"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            app:layout_constraintTop_toBottomOf="@id/app_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Personal Data -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="البيانات الشخصية"
                    android:textColor="#00E5FF"
                    android:textSize="24sp"
                    android:shadowColor="#40C4FF"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="10"
                    android:layout_marginBottom="15dp" />

                <EditText
                    android:id="@+id/name_input"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="الاسم"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#99FFFFFF"
                    android:background="#2E2E2E"
                    android:padding="12dp"
                    android:layout_marginBottom="15dp" />

                <EditText
                    android:id="@+id/age_input"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="العمر"
                    android:inputType="number"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#99FFFFFF"
                    android:background="#2E2E2E"
                    android:padding="12dp"
                    android:layout_marginBottom="15dp" />

                <EditText
                    android:id="@+id/height_input"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="الطول (سم)"
                    android:inputType="numberDecimal"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#99FFFFFF"
                    android:background="#2E2E2E"
                    android:padding="12dp"
                    android:layout_marginBottom="15dp" />

                <EditText
                    android:id="@+id/weight_input"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="الوزن (كجم)"
                    android:inputType="numberDecimal"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#99FFFFFF"
                    android:background="#2E2E2E"
                    android:padding="12dp"
                    android:layout_marginBottom="20dp" />

                <!-- Combat Data -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="البيانات القتالية"
                    android:textColor="#00E5FF"
                    android:textSize="24sp"
                    android:shadowColor="#40C4FF"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="10"
                    android:layout_marginBottom="15dp" />

                <EditText
                    android:id="@+id/skill_level"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="مستوى المهارة (مبتدئ/متوسط/محترف)"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#99FFFFFF"
                    android:background="#2E2E2E"
                    android:padding="12dp"
                    android:layout_marginBottom="15dp" />

                <EditText
                    android:id="@+id/preferred_training"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="نوع التدريب المفضل (ملاكمة، كاراتيه، إلخ)"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#99FFFFFF"
                    android:background="#2E2E2E"
                    android:padding="12dp"
                    android:layout_marginBottom="15dp" />

                <Button
                    android:id="@+id/save_user_data"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="حفظ البيانات"
                    android:background="#00E5FF"
                    android:textColor="#0A0A0A"
                    android:textSize="18sp"
                    android:layout_marginTop="10dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Sections Grid -->
        <LinearLayout
            android:id="@+id/sections_grid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/user_input_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="vertical">

            <!-- Row 1: Daily Tasks & Exercises -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/daily_tasks_button"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#1C1C1C"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="8dp"
                    android:layout_marginEnd="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp">

                        <ImageView
                            android:id="@+id/daily_tasks_icon"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:tint="#00E5FF"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="مهام يومية"
                            android:textColor="#00E5FF"
                            android:textSize="16sp"
                            android:shadowColor="#40C4FF"
                            android:shadowDx="2"
                            android:shadowDy="2"
                            android:shadowRadius="8" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/exercises_button"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#1C1C1C"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="8dp"
                    android:layout_marginStart="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp">

                        <ImageView
                            android:id="@+id/exercises_icon"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:tint="#00E5FF"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="تمارين"
                            android:textColor="#00E5FF"
                            android:textSize="16sp"
                            android:shadowColor="#40C4FF"
                            android:shadowDx="2"
                            android:shadowDy="2"
                            android:shadowRadius="8" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Row 2: Aura & Girls Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/aura_button"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#1C1C1C"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="8dp"
                    android:layout_marginEnd="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp">

                        <ImageView
                            android:id="@+id/aura_icon"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:tint="#00E5FF"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="الهالة"
                            android:textColor="#00E5FF"
                            android:textSize="16sp"
                            android:shadowColor="#40C4FF"
                            android:shadowDx="2"
                            android:shadowDy="2"
                            android:shadowRadius="8" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/girls_section_button"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#1C1C1C"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="8dp"
                    android:layout_marginStart="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp">

                        <ImageView
                            android:id="@+id/girls_section_icon"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:tint="#00E5FF"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="قسم الفتيات"
                            android:textColor="#00E5FF"
                            android:textSize="16sp"
                            android:shadowColor="#40C4FF"
                            android:shadowDx="2"
                            android:shadowDy="2"
                            android:shadowRadius="8" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Row 3: Diet & Shape -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/diet_button"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#1C1C1C"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="8dp"
                    android:layout_marginEnd="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp">

                        <ImageView
                            android:id="@+id/diet_icon"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:tint="#00E5FF"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="النظام الغذائي"
                            android:textColor="#00E5FF"
                            android:textSize="16sp"
                            android:shadowColor="#40C4FF"
                            android:shadowDx="2"
                            android:shadowDy="2"
                            android:shadowRadius="8" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/shape_button"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#1C1C1C"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="8dp"
                    android:layout_marginStart="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp">

                        <ImageView
                            android:id="@+id/shape_icon"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:tint="#00E5FF"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="الشكل"
                            android:textColor="#00E5FF"
                            android:textSize="16sp"
                            android:shadowColor="#40C4FF"
                            android:shadowDx="2"
                            android:shadowDy="2"
                            android:shadowRadius="8" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
