<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#000000"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SOLO WOLF"
        android:textSize="32sp"
        android:textColor="#00FFFF"
        android:gravity="center"
        android:padding="16dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnTasks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. المهام اليومية"
                android:backgroundTint="#003366"
                android:textColor="#00FFFF"
                android:layout_marginVertical="8dp"/>

            <Button
                android:id="@+id/btnWorkout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. تمارين"
                android:backgroundTint="#003366"
                android:textColor="#00FFFF"
                android:layout_marginVertical="8dp"/>

            <Button
                android:id="@+id/btnAura"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3. الهالة"
                android:backgroundTint="#003366"
                android:textColor="#00FFFF"
                android:layout_marginVertical="8dp"/>

            <Button
                android:id="@+id/btnGirls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4. قسم الفتيات"
                android:backgroundTint="#003366"
                android:textColor="#00FFFF"
                android:layout_marginVertical="8dp"/>

            <Button
                android:id="@+id/btnNutrition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5. النظام الغذائي"
                android:backgroundTint="#003366"
                android:textColor="#00FFFF"
                android:layout_marginVertical="8dp"/>

            <Button
                android:id="@+id/btnStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6. الشكل"
                android:backgroundTint="#003366"
                android:textColor="#00FFFF"
                android:layout_marginVertical="8dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>