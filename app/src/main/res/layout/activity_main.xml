<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#121212"
    android:padding="16dp">

    <!-- Header with Neon Glow -->
    <TextView
        android:id="@+id/app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Solo Wolf 2050"
        android:textSize="28sp"
        android:textColor="#00E5FF"
        android:layout_gravity="center"
        android:shadowColor="#00E5FF"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="10"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp" />

    <!-- User Data Input Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#1A1A1A"
        android:padding="16dp"
        android:layout_marginBottom="20dp">

        <!-- Personal Data -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="البيانات الشخصية"
            android:textColor="#00E5FF"
            android:textSize="20sp"
            android:layout_marginBottom="10dp" />

        <EditText
            android:id="@+id/name_input"
            android:layout_width="match_parent"
           

 android:layout_height="wrap_content"
            android:hint="الاسم"
            android:textColor="#FFFFFF"
            android:textColorHint="#80FFFFFF"
            android:background="#2A2A2A"
            android:padding="8dp"
            android:layout_marginBottom="10dp" />

        <EditText
            android:id="@+id/age_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="العمر"
            android:inputType="number"
            android:textColor="#FFFFFF"
            android:textColorHint="#80FFFFFF"
            android:background="#2A2A2A"
            android:padding="8dp"
            android:layout_marginBottom="10dp" />

        <EditText
            android:id="@+id/height_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="الطول (سم)"
            android:inputType="numberDecimal"
            android:textColor="#FFFFFF"
            android:textColorHint="#80FFFFFF"
            android:background="#2A2A2A"
            android:padding="8dp"
            android:layout_marginBottom="10dp" />

        <EditText
            android:id="@+id/weight_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="الوزن (كجم)"
            android:inputType="numberDecimal"
            android:textColor="#FFFFFF"
            android:textColorHint="#80FFFFFF"
            android:background="#2A2A2A"
            android:padding="8dp"
            android:layout_marginBottom="20dp" />

        <!-- Combat Data -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="البيانات القتالية"
            android:textColor="#00E5FF"
            android:textSize="20sp"
            android:layout_marginBottom="10dp" />

        <EditText
            android:id="@+id/skill_level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="مستوى المهارة (مبتدئ/متوسط/محترف)"
            android:textColor="#FFFFFF"
            android:textColorHint="#80FFFFFF"
            android:background="#2A2A2A"
            android:padding="8dp"
            android:layout_marginBottom="10dp" />

        <EditText
            android:id="@+id/preferred_training"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="نوع التدريب المفضل (ملاكمة، كاراتيه، إلخ)"
            android:textColor="#FFFFFF"
            android:textColorHint="#80FFFFFF"
            android:background="#2A2A2A"
            android:padding="8dp"
            android:layout_marginBottom="10dp" />

        <Button
            android:id="@+id/save_user_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="حفظ البيانات"
            android:background="#00E5FF"
            android:textColor="#121212"
            android:layout_marginTop="10dp" />

    </LinearLayout>

    <!-- Sections Grid -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Row 1: Daily Tasks & Exercises -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/daily_tasks_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="مهام يومية"
                android:textColor="#00E5FF"
                android:background="#1A1A1A"
                android:padding="16dp"
                android:layout_marginEnd="8dp"
                android:shadowColor="#00E5FF"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="8" />

            <Button
                android:id="@+id/exercises_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="تمارين"
                android:textColor="#00E5FF"
                android:background="#1A1A1A"
                android:padding="16dp"
                android:layout_marginStart="8dp"
                android:shadowColor="#00E5FF"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="8" />
        </LinearLayout>

        <!-- Row 2: Aura & Girls Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/aura_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="الهالة"
                android:textColor="#00E5FF"
                android:background="#1A1A1A"
                android:padding="16dp"
                android:layout_marginEnd="8dp"
                android:shadowColor="#00E5FF"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="8" />

            <Button
                android:id="@+id/girls_section_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="قسم الفتيات"
                android:textColor="#00E5FF"
                android:background="#1A1A1A"
                android:padding="16dp"
                android:layout_marginStart="8dp"
                android:shadowColor="#00E5FF"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="8" />
        </LinearLayout>

        <!-- Row 3: Diet & Shape -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/diet_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="النظام الغذائي"
                android:textColor="#00E5FF"
                android:background="#1A1A1A"
                android:padding="16dp"
                android:layout_marginEnd="8dp"
                android:shadowColor="#00E5FF"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="8" />

            <Button
                android:id="@+id/shape_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="الشكل"
                android:textColor="#00E5FF"
                android:background="#1A1A1A"
                android:padding="16dp"
                android:layout_marginStart="8dp"
                android:shadowColor="#00E5FF"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="8" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
