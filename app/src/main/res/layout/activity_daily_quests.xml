<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A0A1A"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="المهام اليومية - Solo Leveling"
            android:textColor="@color/blueAccent"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="أكمل المهام لترفع مستواك وتكتسب نقاط خبرة!"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginTop="16dp" />

        <!-- بطاقة المهمة -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="#1A1A2E"
            app:cardCornerRadius="12dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/questTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="المشي 5000 خطوة"
                    android:textColor="@color/blueAccent"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ProgressBar
                    android:id="@+id/questProgress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:progress="30" />

                <TextView
                    android:id="@+id/questProgressText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1500/5000"
                    android:textColor="@color/white"
                    android:layout_marginTop="8dp" />

                <Button
                    android:id="@+id/updateQuestButton"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:text="سجل تقدمك"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="@color/blue" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
