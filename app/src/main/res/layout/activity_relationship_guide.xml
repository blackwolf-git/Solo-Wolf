<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_dark"
    tools:context=".activities.RelationshipGuideActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/NeonText"
            android:text="@string/relationship_guide_title"
            android:textSize="24sp"
            android:textAlignment="center"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/select_woman_type"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="8dp"/>

        <Spinner
            android:id="@+id/spinnerWomanType"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/spinner_neon_border"
            android:popupBackground="@color/secondary_dark"
            android:layout_marginBottom="16dp"/>

        <!-- Profile Overview -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/bg_neon_border"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tvProfileTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/NeonText"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tvProfileDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/strengths"
                android:textColor="@color/text_neon_blue"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/tvStrengths"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/weaknesses"
                android:textColor="@color/text_neon_blue"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/tvWeaknesses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="16dp"/>
        </LinearLayout>

        <!-- Strategy Sections -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/NeonText"
            android:text="@string/approach_strategy"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvApproachStrategy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/NeonText"
            android:text="@string/building_trust"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvBuildingTrust"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/NeonText"
            android:text="@string/making_her_fall"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvMakingHerFall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/NeonText"
            android:text="@string/psychological_tips"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvPsychologicalTips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/tvWarning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/accent_pink"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</ScrollView>
