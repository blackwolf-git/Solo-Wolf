<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/primary_dark"
    android:padding="16dp"
    tools:context=".activities.AuraTrainingActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/NeonText"
        android:text="@string/aura_training_title"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_marginBottom="16dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvAuraExercises"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/bg_neon_border"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tvExerciseTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/NeonText"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvExerciseDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvExerciseDifficulty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvExerciseDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvExerciseSteps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvExerciseBenefits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_secondary"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnStartTraining"
        style="@style/NeonButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/start_training"/>
</LinearLayout>
